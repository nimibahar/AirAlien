<%= form_for([@room, @room.reviews.new]) do |f| %>

  <div id="user_starts"></div><br>
  <%= f.text_field :comment, placeholder: 'write your review' %>

  <%= f.hidden_field :room_id, value: @room.id %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<script>
  $('#user_starts').raty({
    path: '/assets',
    scoreName: 'review[star]',
    score: 1
  });
</script>
